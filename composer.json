{
  "autoload": {
    "psr-4": {
      "LearnModernPhp\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.3",
    "friendsofphp/php-cs-fixer": "^3.26",
    "phpstan/phpstan": "^1.10",
    "phpmd/phpmd": "^2.15"
  },
  "require": {
    "nyholm/psr7": "^1.8"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "phpmd": "phpmd src text phpmd.xml",
    "phpmd:ci": "phpmd src github phpmd.xml --ignore-violations-on-exit"
  }
}
